# MusicDownloaderBot 環境設定
# このファイルを.envにコピーして、各値を設定する

# Discord Bot トークン（必須）
DISCORD_TOKEN=your_discord_bot_token_here

# Qobuz認証情報（Qobuzを使用する場合は必須）
QOBUZ_EMAIL=your_email@example.com
QOBUZ_PASSWORD=your_password_here

# ダウンロード先パス（一時保存場所）
DOWNLOAD_PATH=./downloads

# ライブラリパス（Navidromeの監視フォルダ）
LIBRARY_PATH=C:/path/to/your/navidrome/music/library

# 外部ツールパス（PATHに通っていない場合に指定）
# FFMPEG_PATH=C:/path/to/ffmpeg/bin

# 最大リトライ回数（Qobuzダウンロード失敗時）
MAX_RETRIES=3

# キューの最大サイズ
QUEUE_MAX_SIZE=100

# YouTube設定
# YouTubeのダウンロードがブロックされる場合に設定
# YOUTUBE_PO_TOKEN=your_po_token_here

# ファイル配信サーバー設定（ダウンロードリンク機能）
# Cloudflare Tunnelなどで外部公開するURL（必須：リンク機能を使う場合）
# FILE_SERVER_BASE_URL=https://your-tunnel.trycloudflare.com
FILE_SERVER_PORT=8080
# ダウンロードリンクのサイズ閾値（バイト、これ以下はDiscord直接添付）
DOWNLOAD_SIZE_THRESHOLD=10485760
# ダウンロードリンクの最大ダウンロード回数
DOWNLOAD_LINK_MAX_COUNT=3
# ダウンロードリンクの有効期限（時間）
DOWNLOAD_LINK_EXPIRE_HOURS=24
