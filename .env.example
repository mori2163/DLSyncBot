# MusicDownloaderBot 環境設定
# このファイルを.envにコピーして、各値を設定する

# Discord Bot トークン（必須）
DISCORD_TOKEN=your_discord_bot_token_here

# Qobuz認証情報（Qobuzを使用する場合は必須）
QOBUZ_EMAIL=your_email@example.com
QOBUZ_PASSWORD=your_password_here

# ダウンロード先パス（一時保存場所）
DOWNLOAD_PATH=./downloads

# ライブラリパス（Navidromeの監視フォルダ）
LIBRARY_PATH=C:/path/to/your/navidrome/music/library

# 外部ツールパス（PATHに通っていない場合に指定）
# FFMPEG_PATH=C:/path/to/ffmpeg/bin

# 最大リトライ回数（Qobuzダウンロード失敗時）
MAX_RETRIES=3

# キューの最大サイズ
QUEUE_MAX_SIZE=100

# YouTube設定
# YouTubeのダウンロードがブロックされる場合に設定
# YOUTUBE_PO_TOKEN=your_po_token_here

# ファイル配信サーバー設定（ダウンロードリンク機能）
# Cloudflare Tunnelなどで外部公開するURL（必須：リンク機能を使う場合）
# FILE_SERVER_BASE_URL=https://your-tunnel.trycloudflare.com
FILE_SERVER_PORT=8080
# ダウンロードリンクのサイズ閾値（バイト、これ以下はDiscord直接添付）
DOWNLOAD_SIZE_THRESHOLD=10485760
# ダウンロードリンクの最大ダウンロード回数
DOWNLOAD_LINK_MAX_COUNT=3
# ダウンロードリンクの有効期限（時間）
DOWNLOAD_LINK_EXPIRE_HOURS=24

# アップロード設定（Quick Tunnel経由でファイルをアップロードする場合）
UPLOAD_PATH=./uploads
# 最大アップロードサイズ（バイト）
UPLOAD_MAX_SIZE=1073741824
# 外部公開時のアップロード保護トークン（未設定の場合は無制限）
# UPLOAD_TOKEN=your_upload_token_here

# =============================================================================
# Cloudflare Tunnel設定
# =============================================================================
# トンネルを有効にする（true/false）
CLOUDFLARE_TUNNEL_ENABLED=false

# トンネルモード:
#   quick  - 認証不要、即座に使用可能（URLは毎回変わる）
#   named  - 事前設定が必要、固定URL（推奨）
CLOUDFLARE_TUNNEL_MODE=quick

# Named Tunnel使用時の設定（事前に以下のコマンドが必要）
#   1. cloudflared tunnel login
#   2. cloudflared tunnel create <NAME>
#   3. cloudflared tunnel route dns <NAME> <hostname>
# CLOUDFLARE_TUNNEL_NAME=my-music-bot
# CLOUDFLARE_CONFIG_PATH=~/.cloudflared/config.yml

# cloudflaredの実行ファイルパス（PATHに通っていない場合）
# CLOUDFLARED_PATH=C:/path/to/cloudflared.exe
